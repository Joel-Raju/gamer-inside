<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_gallery_item_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/screenshot_item_horizontal_margin"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/game_gallery_item_cover"
            android:layout_width="@dimen/screenshot_item_full_width"
            android:layout_height="@dimen/screenshot_item_full_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/game_video_gallery_play"
            android:backgroundTint="@color/light_color"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/item_play_arrow_size"
            android:layout_height="@dimen/item_play_arrow_size"
            android:layout_marginBottom="@dimen/screenshot_item_label_vertical_margin"
            android:src="@drawable/ic_play_arrow_black_24dp" />

        <TextView
            android:layout_marginTop="@dimen/screenshot_item_label_vertical_margin"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/game_video_gallery_play"
            android:id="@+id/game_gallery_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/screenshot_item_label_vertical_margin"
            android:textAlignment="center" />
    </RelativeLayout>

</android.support.v7.widget.CardView>

