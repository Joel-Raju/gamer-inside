<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_gallery_item_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/screenshot_item_horizontal_margin"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/game_gallery_item_cover"
        android:layout_width="@dimen/screenshot_item_full_width"
        android:layout_height="@dimen/screenshot_item_full_height"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/game_gallery_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</android.support.v7.widget.CardView>