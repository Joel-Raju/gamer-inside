<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="4dp"
    android:clickable="true"
    android:elevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/game_card_item_cover"
            android:layout_width="@dimen/game_card_grid_item_width"
            android:layout_height="@dimen/game_card_grid_item_height"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:scaleType="fitXY" />

        <TextView
            android:textColor="@android:color/black"
            android:fontFamily="@font/opensans_regular"
            android:id="@+id/game_card_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/game_card_item_cover"
            android:minLines="2"
            android:maxLines="2"
            android:maxWidth="@dimen/game_card_item_grid_max_width"
            android:padding="@dimen/game_card_item_title_padding"
            android:textSize="@dimen/game_card_item_title_size" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
